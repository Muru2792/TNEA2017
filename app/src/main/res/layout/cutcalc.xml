<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/butti_pop"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Your Maths Marks"
            android:layout_marginTop="3dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:layout_marginTop="3dp"
                android:id="@+id/et_maths"
                android:hint="Mathematics"
                android:paddingLeft="5dp"
                android:textSize="14dp"
                android:background="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Your Physics Mark"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:paddingLeft="5dp"/>


            <EditText
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:ems="10"
                android:id="@+id/et_phy"
                android:hint="Physics"
                android:textSize="14dp"
                android:background="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Your Chemistry Mark"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:id="@+id/textView2"
            android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:textSize="14dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:id="@+id/et_che"
                android:hint="Chemistry"
                android:paddingLeft="5dp"
                android:background="#FFFFFF" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:text="Calculate"
            android:id="@+id/btn_calc"
            android:padding="9dp"
            android:background="#021c6a"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>