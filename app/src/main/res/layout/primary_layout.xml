<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v1">



    <LinearLayout
        android:id="@+id/lt_top"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/grade1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:gravity="left" />

        <TextView
            android:id="@+id/txtClgTitle"
            android:text="College Name"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:textColor="#D70000"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.61" />



    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/line"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/lt_top"
        android:layout_above="@+id/adViewAddPro">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lt_top"

       android:padding="10dp">


   <LinearLayout
    android:orientation="vertical"
    android:background="@drawable/samplepo1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/line"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/loc"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:layout_marginLeft="5dp"
                android:id="@+id/txtAddress"
                android:layout_weight="1"
                android:textSize="14dp"

                android:maxLines="3"
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/line"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fax"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtFax"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"

                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/call"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtPhone"
                android:layout_weight="1"
                android:textSize="14dp"
android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/line"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/web"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtSite"
                android:layout_weight="0.15"
                android:autoLink="web"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mail"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtMail"
                android:layout_weight="0.15"
                android:autoLink="email"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/line"
            />
</LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/samplepo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Boys Hostel"
                android:textColor="#0D47A1"
                android:id="@+id/txtBoysTitle"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="16dp"/>

            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/txtBoys"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="right"/>
        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/line"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Girls Hostel"
                android:textColor="#0D47A1"
                android:id="@+id/txtGirlsTitle"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>



            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/txtGirls"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="right"/>
        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/line"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Transport Availabilty"
                android:textColor="#0D47A1"
                android:layout_marginLeft="5dp"
                android:id="@+id/txtTransTitle"
                android:layout_weight="1"
                android:textSize="16dp"/>


            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/txtTrans"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="right"/>


        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/line"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Transport Choice"
                android:textColor="#0D47A1"
                android:layout_marginLeft="5dp"
                android:id="@+id/txtTransChoiceTitle"
                android:layout_weight="1"
                android:textSize="16dp"/>


            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/txtTransChoice"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="right"/>

        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/line"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Minority Status"
                android:textColor="#0D47A1"
                android:id="@+id/txtMinorityTitle"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>

            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/txtMinorityChoice"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="right"
                />

        </LinearLayout>

            </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/line"
            />



        <LinearLayout
            android:layout_marginTop="6dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/samplepo1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note:"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/done"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:text="Yes"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clear"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:text="No"/>


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/na"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Not Applicable"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/opt"/>

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Optional"

                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comp"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Compulsary"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewAddPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id1">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>